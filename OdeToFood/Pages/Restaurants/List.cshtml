@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
}

<h1 class="display-4">Restaurants</h1>

<form method="get">
    <div class="input-group mb-3">
        <input type="search" class="form-control" asp-for="SearchTerm" />
        <button class="btn btn-outline-secondary">SEARCH</button>
    </div>
</form>

<table class="table">
    @foreach(var restaurant in Model.Restaurants)
    {
    <tr>
        <td>@restaurant.Name</td>
        <td>@restaurant.Location</td>
        <td>@restaurant.Cuisine</td>
        <td>
            <a asp-page="./Detail" asp-route-restaurantId="@restaurant.Id" class="btn btn-outline-secondary">Details</a>
        </td>
        <td>
            <a asp-page="./Edit" asp-route-restaurantId="@restaurant.Id" class="btn btn-outline-secondary">Edit</a>
        </td>
    </tr>
    }
</table>

<a asp-page=".\Edit" class="btn btn-outline-success">Add New</a>

