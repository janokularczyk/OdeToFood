@using OdeToFood.Core
@model Restaurant

<div class="card mb-3">
    <div class="card-header">
        <h3>@Model.Name</h3>
    </div>
    <div class="card-body">
        <p>Location: @Model.Location</p>
        <p>Cuisine: @Model.Cuisine</p>
    </div>
    <div class="card-footer">
        <a asp-page="./Detail" asp-route-restaurantId="@Model.Id" class="btn btn-outline-secondary">Details</a>
        <a asp-page="./Edit" asp-route-restaurantId="@Model.Id" class="btn btn-outline-secondary">Edit</a>
        <a asp-page="./Delete" asp-route-restaurantId="@Model.Id" class="btn btn-danger">Delete</a>
    </div>
</div>
